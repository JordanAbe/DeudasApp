<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.edu.upc.deudasapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".DeudasApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="ResidentApp"
        android:roundIcon="@drawable/ic_dep"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".viewcontrollers.activities.MainActivity"
            android:label="ResidentApp"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".viewcontrollers.activities.DeudaActivity"
            android:label="DEUDA"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>